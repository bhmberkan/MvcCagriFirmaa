@using MvcCagriFirmaa.Models.Entity;
@model List<TblMesajlar>
@{
    ViewBag.Title = "Gelenmesajlar";
    Layout = "~/Views/Shared/FirmaLayout.cshtml";
}

<h2>Gelen mesajlar</h2>


<table class="table table-bordered">
    <tr>
        <th>  ID  </th>
        <th>  Gönderen  </th>
        <th>  Konu  </th>
        <th>  Mesaj  </th>
        <th>  Tarih  </th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Gonderen</td>
            <td>@x.Konu</td>
            <td>@x.Mesaj</td>
            <td>@x.Tarih</td>

            @*<td> <a href="/Default/MesajDüzenle/@x.ID" class="btn btn-success">Düzenle</a></td>*@
            
        </tr>



    }
</table>

<a href="/Default/YeniMesaj" class="btn btn-primary">Yeni Mesaj Ekle</a>

